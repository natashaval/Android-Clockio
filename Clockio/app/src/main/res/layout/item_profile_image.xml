<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/profileInitial"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small"
        app:mli_shape_type="circle"
        app:mli_shape_color="@color/colorPrimaryLight"
        app:mli_letter=""
        app:mli_letter_size="26"
        app:mli_letters_number="1"
        app:mli_letter_color="@color/textPrimary"
        app:mli_initials="true"
        app:mli_initials_number="2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small"
        android:visibility="invisible" />

</RelativeLayout>